<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600"
             x:Class="Argon.Editor.Views.ModuleView">
	<Border BorderBrush="Gray" BorderThickness="1" Margin="2">
		<DockPanel Margin="5">
			<Rectangle Margin="5" Fill="Blue" Height="100" Width="100" DockPanel.Dock="Left" />
			<TextBlock FontSize="18" FontWeight="Bold" DockPanel.Dock="Top">Name of the module.</TextBlock>
			<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" DockPanel.Dock="Bottom">
				<Button Margin="5">Open</Button>
				<Button Margin="5">Delete</Button>
			</StackPanel>
			<TextBlock>Short description of the contents of the module.</TextBlock>
		</DockPanel>
	</Border>
</UserControl>
