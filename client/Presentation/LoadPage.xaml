<Page KeyDown="OnKeyDown"
	x:Class="Argon.Client.Presentation.LoadPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:uen="using:Uno.Extensions.Navigation.UI">

	<Grid x:Name="Grid" Background="#303030">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="1" />
			<RowDefinition Height="*" />
			<RowDefinition Height="1" />
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
	
		<RelativePanel Grid.Column="0" Grid.Row="0" Background="#202020">
			<TextBlock x:Name="TopLeft" FontSize="75" Margin="0 -25"
					RelativePanel.AlignLeftWithPanel="True">ðŸ™§</TextBlock>
			<TextBlock FontSize="40" VerticalAlignment="Center" Margin="0 0 0 5"
					RelativePanel.AlignVerticalCenterWithPanel="True"
					RelativePanel.AlignHorizontalCenterWithPanel="True" x:Uid="LoadTitle" />
			<TextBlock x:Name="TopRight" FontSize="75" Margin="0 -25"
					RelativePanel.AlignRightWithPanel="True">ðŸ™¥</TextBlock>
		</RelativePanel>
		<Rectangle Grid.Column="0" Grid.Row="1" 
			Fill="Gray" Height="1"/>
		
		<Rectangle Grid.Column="0" Grid.Row="3" 
			Fill="Gray" Height="1"/>
		<RelativePanel Grid.Column="0" Grid.Row="4" Background="#202020">
			<TextBlock x:Name="BottomLeft" FontSize="75" Margin="0 -20"
					RelativePanel.AlignLeftWithPanel="True">ðŸ™¦</TextBlock>
			<StackPanel HorizontalAlignment="Center" Spacing="10" Margin="10"
					RelativePanel.AlignVerticalCenterWithPanel="True"
					RelativePanel.AlignHorizontalCenterWithPanel="True"
            		Orientation="Horizontal">
				<Button FontSize="15"
					uen:Navigation.Request="Main">Enter</Button>
				<TextBlock x:Uid="StartLabel" VerticalAlignment="Center" FontSize="25" />
				<TextBlock FontSize="25" Text=" " />
				<Button FontSize="15"
					uen:Navigation.Request="-">Esc</Button>
				<TextBlock x:Uid="CancelLabel" VerticalAlignment="Center" FontSize="25" />
			</StackPanel>
			<TextBlock x:Name="BottomRight" FontSize="75" Margin="0 -20"
					RelativePanel.AlignRightWithPanel="True">ðŸ™¤</TextBlock>
		</RelativePanel>
	</Grid>
</Page>