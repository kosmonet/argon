<Page
	x:Class="Argon.Client.Presentation.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<!-- for some reason, it's impossible to get keyboard focus if there's 
	only a SkiaGameCanvas added to the page -->
	<Grid x:Name="Grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="0" />
		</Grid.RowDefinitions>

		<!-- and compiling fails if grid position is added to the SkiaGameCanvas,
		so we put it in the first grid cell -->
		<SkiaGameCanvas />
		<Button Grid.Column="0" Grid.Row="1" />
	</Grid>
</Page>
